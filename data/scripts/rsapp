#!/bin/bash
# Restarts application and outputs STDOUT and STDERR texts from inside applications Docker container. Takes applications unique name as parameter (e.g. rsapp spaceify/bigscreen).
# Spaceify Oy 15.4.2015

if [[ "$1" == "" ]]; then
	printf "\nUsage: rsapp unique_name\nwhere unique_name is the unique name of an application.\n\n"
	exit 1
fi

spm restart "$1"								# Restart the application first

imline=""										# Get the line with the applications unique name from the images
doim=$(docker images)
while read -r line;
do
	line=$( echo "$line" | grep -i "$1" )
	if [[ "$line" != "" ]]; then
		imline=$line
		break
	fi
done <<< "$doim"
if [[ $imline == "" ]]; then exit 0; fi

psline=""										# Get the line with the images id from the containers
dops=$(docker ps)
IFS=' ' read -ra array <<< "$imline"
while read -r line;
do
	line=$( echo "$line" | grep -i "${array[2]}" )
	if [[ "$line" != "" ]]; then
		psline=$line
		break
	fi
done <<< "$dops"

if [[ $psline != "" ]]; then
	IFS=' ' read -ra array <<< "$psline"
	printf "\n\nSTDOUT and STDERR for application '$1'\n\n"
	docker logs "${array[0]}"
	printf "\n\n"
fi
